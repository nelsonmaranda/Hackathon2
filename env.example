# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development

# Database Configuration
DB_HOST=localhost
DB_NAME=eduverse
DB_USER=root
DB_PASSWORD=your_database_password

# Hugging Face API
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Email Configuration (Gmail)
# For Gmail, you need to create an App Password: https://support.google.com/accounts/answer/185833
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Optional: Custom Hugging Face Model
# HF_MODEL_URL=https://api-inference.huggingface.co/models/microsoft/DialoGPT-medium

# OAuth (fill these when enabling social login)
# For local dev, set callback URLs to http://localhost:5000/auth/google/callback and http://localhost:5000/auth/github/callback
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# IntaSend Payment Gateway
# Get credentials from https://intasend.com/
INTASEND_PUBLISHABLE_KEY=your-intasend-publishable-key
INTASEND_SECRET_KEY=your-intasend-secret-key
INTASEND_TEST_MODE=True
